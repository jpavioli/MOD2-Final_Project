<!doctype html>
<html lang="en">
  <head>
  
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="GYm,fitness,business,company,agency,multipurpose,modern,bootstrap4">
  
  <meta name="author" content="Themefisher.com">

  <title>GymFit| Fitness template</title>

  <!-- bootstrap.min css -->
  <link rel="stylesheet" href="http://demo.themefisher.com/gymfit/plugins/bootstrap/css/bootstrap.min.css">
  <!-- Icofont Css -->
  <link rel="stylesheet" href="http://demo.themefisher.com/gymfit/plugins/icofont/icofont.min.css">
  <!-- Themify Css -->
  <link rel="stylesheet" href="http://demo.themefisher.com/gymfit/plugins/themify/css/themify-icons.css">
  <!-- animate.css -->
  <link rel="stylesheet" href="http://demo.themefisher.com/gymfit/plugins/animate-css/animate.css">
  <!-- Magnify Popup -->
  <link rel="stylesheet" href="http://demo.themefisher.com/gymfit/plugins/magnific-popup/dist/magnific-popup.css">
  <!-- Owl Carousel CSS -->
  <link rel="stylesheet" href="http://demo.themefisher.com/gymfit/plugins/slick-carousel/slick/slick.css">
  <link rel="stylesheet" href="http://demo.themefisher.com/gymfit/plugins/slick-carousel/slick/slick-theme.css">
  <!-- Main Stylesheet -->
  <link rel="stylesheet" href="http://demo.themefisher.com/gymfit/css/style.css">

</head>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if session[:user_id] %>
      <%= form_tag("/login/#{User.find(session[:user_id]).id}/logoff", controller: "users", method: "session_logoff") do %>
        <%= submit_tag("Log-out")%>
      <%end%>
    <%else%>
      <%= link_to "Log in" , login_path %>
    <%end%>
    Currently Logged in as: <%= session[:user_id] ? "#{User.find(session[:user_id]).name} | Access: #{User.find(session[:user_id]).user_type}" : "No one" %>

    <%= yield %>
    <br>
    ---
    <br><br>


  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
    <div class="container">
      <a class="navbar-brand js-scroll-trigger" href="#page-top">Start Bootstrap</a>
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        Menu
        <i class="fas fa-bars"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="#about">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="#projects">Projects</a>
          </li>
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="#signup">Contact</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

    <%= yield %>

  <!-- Footer -->
  <footer class="bg-black small text-center text-white-50">
    <div class="container">
      Copyright &copy; Your Website 2019
    </div>
  </footer>

    <p>
      <%= link_to "All Competitions", competitions_path %> |
      <%= link_to "All Events", events_path %> |
      <%= link_to "All Teams", teams_path %> |
      <%= link_to "All Scores", scores_path %> |
      <%= link_to "All Athletes", athletes_path %><br>
      <% if session[:user_id] != nil %>
        <%= link_to "Dashboard", User.find(session[:user_id]) %>
      <% end %>
    </p>
  </body>
</html>
