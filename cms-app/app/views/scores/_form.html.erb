<% if flash[:error] %>
  <% flash[:error].each do |e| %>
    <p><%= e %></p>
  <%end%>
<%end%>

<%= form_for @score do |f| %>
<%= f.label "Score:" %>
<%= f.number_field :score %><br/>
<%= f.label "Competition:" %>
<%= f.collection_select :event_id, Event.all, :id, :title, {:prompt => "Please select an Event"} %><br>
<%= f.label "Team:" %>
<%= f.collection_select :team_id, Team.all, :id, :name, {:prompt => "Please select a Team" } %><br>
<%= f.submit %>
<% end %>
