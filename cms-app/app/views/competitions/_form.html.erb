<% if flash[:error] %>
  <% flash[:error].each do |e| %>
  <p><%= e %></p>
  <%end%>
<%end%>

<%= form_for @competition do |f| %>
  <%= f.label "Name:" %>
  <%= f.text_field :name %><br>
  <%= f.label "Description:" %>
  <%= f.text_area :description %><br>
  <%= f.label "Location:" %>
  <%= f.text_area :location %><br>
  <%= f.label "DateTime:" %>
  <%= f.date_select :datetime %><br>
  <%= f.label "Status:" %>
  <%= f.text_field :status %>
  <%= f.submit %>
<% end %>
